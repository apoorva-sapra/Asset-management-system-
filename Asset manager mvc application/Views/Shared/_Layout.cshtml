<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AssetManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AssetManagement</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                         <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" asp-controller="Home">Add</a>
                            <span class="caret"></span>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Book" asp-action="AddBook">Books</a></li>
                                <li><a asp-controller="Software" asp-action="AddSoftware">Software License</a></li>
                                <li><a asp-controller="Hardware" asp-action="AddHardware">Hardwares</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="All">Display</a>
                           
                        </li>
                       @* <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" asp-controller="Home">Update</a>
                            <span class="caret"></span>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Book" asp-action="AddBook">Books</a></li>
                                <li><a asp-controller="Software" asp-action="AddBook">Software License</a></li>
                                <li><a asp-controller="Hardware" asp-action="AddBook">Hardwares</a></li>
                            </ul>
                        </li> *@
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" asp-controller="Home">Delete</a>
                            <span class="caret"></span>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Book" asp-action="DelBook">Books</a></li>
                                <li><a asp-controller="Software" asp-action="DelSoftware">Software License</a></li>
                                <li><a asp-controller="Hardware" asp-action="DelHardware">Hardwares</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" asp-controller="Home">Search</a>
                            <span class="caret"></span>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Book" asp-action="SearchBook">Books</a></li>
                                <li><a asp-controller="Software" asp-action="SearchSoftware">Software License</a></li>
                                <li><a asp-controller="Hardware" asp-action="SearchHardware">Hardwares</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - AssetManagement - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
